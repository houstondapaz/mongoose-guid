{
  "preset": "ts-jest",
  "transform": {
    "^.+\\.ts?$": "ts-jest",
    "^.+\\.(ts|js)?$": "babel-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
  "setupFilesAfterEnv": ["jest-extended"],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "v8",
  "collectCoverageFrom": [
    "src/*.ts",
    "src/**/*.ts",
    "!src/*.d.ts",
    "!src/index.ts",
    "!src/**/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "moduleFileExtensions": ["ts", "js", "json", "node"]
}
